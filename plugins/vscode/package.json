{
  "name": "gamescript",
  "displayName": "GameScript",
  "description": "Visual dialogue authoring for games",
  "version": "2.0.18",
  "publisher": "ShortSleeveStudio",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShortSleeveStudio/GameScript"
  },
  "private": true,
  "type": "module",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gamescript",
          "title": "GameScript",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "gamescript": [
        {
          "type": "webview",
          "id": "gamescript.sidebar",
          "name": "GameScript",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "gamescript.openEditor",
        "title": "Open Editor",
        "category": "GameScript",
        "icon": "$(book)"
      },
      {
        "command": "gamescript.refreshRegistry",
        "title": "Refresh Action/Condition Registry",
        "category": "GameScript"
      },
      {
        "command": "gamescript.undo",
        "title": "Undo",
        "category": "GameScript"
      },
      {
        "command": "gamescript.redo",
        "title": "Redo",
        "category": "GameScript"
      },
      {
        "command": "gamescript.save",
        "title": "Save",
        "category": "GameScript"
      }
    ],
    "keybindings": [
      {
        "command": "gamescript.undo",
        "key": "cmd+z",
        "win": "ctrl+z",
        "linux": "ctrl+z",
        "when": "gamescriptPanelFocused"
      },
      {
        "command": "gamescript.redo",
        "key": "cmd+shift+z",
        "win": "ctrl+shift+z",
        "linux": "ctrl+shift+z",
        "when": "gamescriptPanelFocused"
      },
      {
        "command": "gamescript.redo",
        "key": "cmd+y",
        "win": "ctrl+y",
        "linux": "ctrl+y",
        "when": "gamescriptPanelFocused"
      },
      {
        "command": "gamescript.save",
        "key": "cmd+s",
        "win": "ctrl+s",
        "linux": "ctrl+s",
        "when": "gamescriptPanelFocused"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "gamescript.openEditor",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "node build.mjs",
    "dev": "node build.mjs --watch",
    "clean": "rm -rf dist /tmp/vscode-gamescript-package",
    "package": "node package-extension.mjs",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@gamescript/shared": "workspace:*",
    "@vscode/sqlite3": "^5.1.10-vscode",
    "pg": "^8.11.5"
  },
  "bundledDependencies": [
    "@vscode/sqlite3",
    "pg"
  ],
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/pg": "^8.11.5",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.2",
    "typescript": "^5.4.5"
  }
}
